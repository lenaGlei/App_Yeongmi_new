                    android:layout_toEndOf="@+id/linkdinLeon_btn"
                    android:text="LinkedIn Profil"
                    android:textColor="@color/blue"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"/>

            </RelativeLayout>

        </LinearLayout>
        <!--Lukas  -->
        <LinearLayout
            android:background="@drawable/rounded_background"
